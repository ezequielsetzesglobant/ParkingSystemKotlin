<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_200"
    tools:context=".activity.ReservationsRecyclerActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_reservations_recycler_activity_list"
        style="@style/RecyclerViewRecyclerActivityStyle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/button_reservations_recycler_activity_back"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_reservations_recycler_activity_back"
        style="@style/ButtonBackRecyclerActivityStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_back_recycler_activity_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
