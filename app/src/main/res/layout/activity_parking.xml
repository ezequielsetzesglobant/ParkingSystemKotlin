<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_main_parking_title"
        style="@style/TextViewMainStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_main_activity_parking"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_main_set_amount_parking_spaces"
        style="@style/ButtonMainStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_main_activity_set_spaces"
        app:layout_constraintTop_toBottomOf="@id/text_main_parking_title" />

</androidx.constraintlayout.widget.ConstraintLayout>
