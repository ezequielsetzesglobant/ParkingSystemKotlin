<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextViewMainStyle" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textStyle">italic</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textColor">@color/teal_700</item>
        <item name="android:textSize">@dimen/text_view_main_activity_text_size</item>
        <item name="android:layout_marginTop">@dimen/text_view_main_activity_margin_top</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ButtonSetAmountSpacesMainStyle" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/button_set_amount_spaces_main_activity_text_size</item>
        <item name="android:layout_marginHorizontal">@dimen/button_set_amount_spaces_main_activity_margin_horizontal</item>
        <item name="android:layout_marginTop">@dimen/button_set_amount_spaces_main_activity_margin_top</item>
        <item name="android:backgroundTint">@color/teal_700</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonReservationMainStyle" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/button_reservation_main_activity_text_size</item>
        <item name="android:layout_marginHorizontal">@dimen/button_reservation_main_activity_margin_horizontal</item>
        <item name="android:layout_marginTop">@dimen/button_reservation_main_activity_margin_top</item>
        <item name="android:backgroundTint">@color/orange</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextViewFragmentStyle" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_view_dialog_fragment_text_size</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="EditTextFragmentStyle" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textSize">@dimen/edit_text_dialog_fragment_text_size</item>
        <item name="android:layout_marginTop">@dimen/edit_text_dialog_fragment_margin_top</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="ButtonFragmentStyle" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">@dimen/button_dialog_fragment_text_size</item>
        <item name="android:layout_marginHorizontal">@dimen/button_dialog_fragment_margin_horizontal</item>
        <item name="android:layout_marginTop">@dimen/button_dialog_fragment_margin_top</item>
        <item name="android:backgroundTint">@color/blue</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonReservationActivityStyle" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">@dimen/button_reservation_activity_text_size</item>
        <item name="android:layout_marginHorizontal">@dimen/button_reservation_activity_margin_horizontal</item>
        <item name="android:layout_marginTop">@dimen/button_reservation_activity_margin_top</item>
        <item name="android:backgroundTint">@color/green</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="EditTextReservationActivityStyle" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textSize">@dimen/edit_text_reservation_activity_text_size</item>
        <item name="android:layout_marginHorizontal">@dimen/edit_text_reservation_activity_margin_horizontal</item>
        <item name="android:layout_marginTop">@dimen/edit_text_reservation_activity_margin_top</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
    </style>
</resources>
